{
	"Name":"C#",
	"FileTypes":[".cs"],
	"CommentPrefix":"//",

	"Rules":[
		{
			"Style":"Comment",
			"Options":"Multiline",
			"Regex":"//.*$"
		},
		{
			"Style":"Comment",
			"Options":"Singleline",
			"Regex":"(/\\*.*?\\*/)|(/\\*.*)"
		},
		{
			"Style":"Comment",
			"Options":"Singleline,RightToLeft",
			"Regex":"(/\\*.*?\\*/)|(.*\\*/)"
		},
		{
			"Style":"String",
			"Regex":"\"\"|@\"\"|''|@\".*?\"|(?<!@)(?<range>\".*?[^\\\\]\")|'.*?[^\\\\]'"
		},
		{
			"Style":"ClassName",
			"Regex":"\\b(class|struct|enum|interface)\\s+(?<range>\\w+?)\\b"
		},
		{
			"Style":"FunctionName",
			"Regex":"\\b(void|int|bool|string|uint|ushort|ulong|byte)\\s+(?<range>\\w+?)\\b"
		},
		{
			"Style":"Preprocessor",
			"Regex":"#[a-zA-Z_\\d]*\\b"
		},
		{
			"Style":"Keyword",
			"Regex":"\\b(abstract|as|base|using|break|case|catch|char|checked|const|continue|decimal|default|delegate|do|else|enum|event|explicit|extern|finally|fixed|float|for|foreach|goto|if|implicit|in|interface|internal|is|this|lock|long|namespace|new|object|operator|out|override|params|private|protected|public|readonly|ref|return|sbyte|sealed|short|sizeof|stackalloc|static|struct|switch|throw|try|typeof|unchecked|unsafe|virtual|volatile|while|add|alias|ascending|descending|dynamic|from|get|global|group|into|join|let|orderby|partial|remove|select|set|value|var|where|yield)\\b"
		},
		{
			"Style":"Constant",
			"Regex":"\\b(true|false|null)\\b"
		},
		{
			"Style":"Storage",
			"Regex":"\\b(class|void|bool|string|int|double|float|byte|uint|ushort|ulong)\\b"
		},
		{
			"Style":"Number",
			"Regex":"\\b\\d+[\\.]?\\d*([eE]\\-?\\d+)?[lLdDfF]?\\b|\\b0x[a-fA-F\\d]+\\b"
		}
	],
	
	"FoldingRules":[
		{
			"FoldingStartMarker":"{",
			"FoldingEndMarker":"}"
		},
		{
			"FoldingStartMarker":"/\\*",
			"FoldingEndMarker":"\\*/",
		},
		{
			"FoldingStartMarker":"#region\\b",
			"FoldingEndMarker":"#endregion\\b"
		}
	]
}