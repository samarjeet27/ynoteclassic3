{
	"Name":"Python",
	"FileTypes":[".py"],
	"CommentPrefix":"#",

	"Rules":[
		{
			"Style":"Comment",
			"Options":"Multiline",
			"Regex":"#.*$"
		},
		{
			"Style":"String",
			"Regex":"\"\"|@\"\"|''|@\".*?\"|(?<!@)(?<range>\".*?[^\\\\]\")|'.*?[^\\\\]'"
		},
		{
			"Style":"String",
			"Regex":"(\"\"\".*?\"\"\")|('''.*?''')|(\"\"\".*)|('''.*)"
		},
		{
			"Style":"String",
			"Regex":"(\"\"\".*?\"\"\")|('''.*?''')|(.*\"\"\")|(.*''')"
		},
		{
			"Style":"ClassName",
			"Regex":"\\b(class)\\s+(?<range>\\w+?)\\b"
		},
		{
			"Style":"FunctionName",
			"Regex":"\\b(def)\\s+(?<range>\\w+?)\\b"
		},
		{
			"Style":"Keyword",
			"Regex":"\\b(and|del|from|not|while|as|elif|global|or|with|assert|else|if|pass|yield|break|except|import|print|exec|in|raise|continue|finally|is|return|for|try)\\b"
		},
		{
			"Style":"Constant",
			"Regex":"\\b(True|False|None|NotImplemented)\\b"
		},
		{
			"Style":"Storage",
			"Regex":"\\b(def|global|class)\\b"
		},
		{
			"Style":"LibraryFunction",
			"Regex":"\\b(dir|id|callable|dict|open|all|vars|iter|enumerate|sorted|super|classmethod|tuple|execfile|eval|abs|compile|basestring|map|self|xrange|range|lambda|ord|isinstance|long|float|format|str|type|hasattr|max|len|repr|getattr|list)\\b"
		},
		{
			"Style":"LibraryClass",
			"Regex":"\\b(self|bool|buffer|set|slice|unicode|property|staticmethod|enumerate|object|open|dict|int|tuple|basestring|long|float|type|list|RuntimeError)\\b"
		},
		{
			"Style":"Number",
			"Regex":"\\b\\d+[\\.]?\\d*([eE]\\-?\\d+)?[lLdDfF]?\\b|\\b0x[a-fA-F\\d]+\\b"
		}
	],
}